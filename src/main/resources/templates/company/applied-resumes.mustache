{{> layout/header}}
<div class="container d-flex">
    <section class="container grid-gap: 50px; mt-5">
        <h1>{{company.companyName}}에 도착한 이력서를 검토해보세요</h1>
        <br>

        <!-- 유형별 공고 탭 끝 -->
        <br>

        <ul class="row row-cols-4 gap-3">
        {{#applyList}}
            <li class="card col" style="width: 15rem; padding: 0px !important; border: 0">
                <a href="/company/resumes/{{id}}" style="text-decoration: none; color: black">
                    <div style="width: 100%; height: 15rem; overflow: hidden">
                        <img src="/images/{{resume.profile}}" class="card-img-top" alt="이력서 사진"/>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title" style="

                            display: -webkit-box;
                            -webkit-line-clamp: 1;
                            -webkit-box-orient: vertical;
                            overflow: hidden;
                            text-overflow: ellipsis;

                          "><b>{{resume.user.name}}</b></h5>
                        <h5 class="card-title" style="

                            display: -webkit-box;
                            -webkit-line-clamp: 1;
                            -webkit-box-orient: vertical;
                            overflow: hidden;
                            text-overflow: ellipsis;

                          "><b>{{resume.title}}</b></h5>
                        <h6><span>커리어</span>|<span>{{resume.career}}</span></h6>
                        <p class="card-text" style="

                          display: -webkit-box;
                          -webkit-line-clamp: 1;
                          -webkit-box-orient: vertical;
                          overflow: hidden;
                          text-overflow: ellipsis;
                        ">
                            {{resume.simpleIntroduce}}
                        </p>
                        <!-- 버튼 구림 -->
                        <div class="d-flex justify-content-start" style="

                          display: -webkit-box;
                          -webkit-line-clamp: 1;
                          -webkit-box-orient: vertical;
                          overflow: hidden;
                          text-overflow: ellipsis;
                        ">
                            <h6><span>{{#resume.skillList}}
                                        <button class="btn btn-outline-warning btn-sm disabled">
                                            {{skill}}
                                        </button>{{/resume.skillList}}</span></h6>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-outline-success mb-3" style="width: 100%" disabled>{{isPass}}</button>
                    </div>
                </a>
                <!-- 링크 없어도 될 것 같음. 같은 페이지를 반환함. -->
                <!--                <div class="d-flex justify-content-center">-->
                <!--                    <a href="/company/resumes/1" class="btn btn-outline-success mb-3" style="width: 100%">합격불합격</a>-->
                <!--                </div>-->
            </li>
        {{/applyList}}
        </ul>

        <div class="container mt-5 mb-5">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">이전</a>
                    </li>
                    <li class="page-item active">
                        <a class="page-link" href="#">1</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">2</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">3</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">다음</a>
                    </li>
                </ul>
            </nav>
        </div>
        <!-- 페이지네이션 -->
    </section>

    <!-- list-group( 오른쪽 바로가기) 시작 -->
    <div class="list-group mx-2">
        <a href="/company/info" class="list-group-item shadow " style="width: 180px;">회사 정보 관리</a>
        <a href="/company/posts" class="list-group-item shadow">공고 관리</a>
        <a href="/company/resumes" class="list-group-item hs_list_effect shadow">받은 이력서</a>
        <a href="/company/scrap" class="list-group-item shadow">스크랩한 이력서</a>
        <a href="/company/offers" class="list-group-item shadow">제안한 이력서</a>
    </div>
    <!-- list-group( 오른쪽 바로가기) 끝 -->
</div>
{{> layout/footer}}