{{> layout/header}}
<div class="container justify-content-center mt-4 mb-5">
    <div class="border hs_content_box w-100 mx-2 mt-4 rounded shadow pb-5">
        <div class="px-5 pt-5 pb-2"></div>
        <div class="px-5">
            <div class="row align-items-center">
                <!-- 타틀 -->
                <div class="col">
                    <h3>{{offer.resume.title}}</h3>
                </div>
                <!-- 제안취소 -->
                <div class="col-auto">
                    <form action="/company/offer/{{offer.id}}/detail/delete" method="post">
                        <div class="d-flex justify-content-center">
                            <button class="btn btn-outline-danger mb-3">제안취소</button>
                        </div>
                    </form>
                </div>
            </div>
            <hr>

            <div class="pt-5 mt-3">
                <div class="border border-tertiary px-3 py-3 pt-3 d-inline-flex ms-2 me-3 mb-3 w-100">
                    <div>
                        <img src="/images/{{offer.resume.profile}}" alt="프로필 사진" style="width: 188px; height: 226px;">
                    </div>
                    <table class="mx-4 resume_table">
                        <tr>
                            <td style="width: 120px">이름</td>
                            <td>{{offer.resume.user.name}}</td>
                        </tr>
                        <tr>
                            <td>생년월일</td>
                            <td>{{offer.resume.user.birth}}</td>
                        </tr>
                        <tr>
                            <td>연락처</td>
                            <td>{{offer.resume.user.tel}}</td>
                        </tr>
                        <tr>
                            <td>주소</td>
                            <td>{{offer.resume.user.address}}</td>
                        </tr>
                        <tr>
                            <td>이메일</td>
                            <td>{{offer.resume.user.email}}</td>
                        </tr>
                    </table>
                </div>
                <div class="mt-5">
                    <h4>커리어</h4>
                    <textarea style="max-height: 150px; overflow-y: auto;" class="w-100 mb-5 opacity-80" rows="10"
                              readOnly>{{offer.resume.career}}</textarea>
                    <h4>간단 소개</h4>
                    <textarea style="max-height: 150px; overflow-y: auto;" class="w-100 mb-5 opacity-80" rows="10"
                              readOnly>{{offer.resume.simpleIntroduce}}</textarea>
                    <h4>포트폴리오 주소</h4>
                    <input type="url" class="form-control mt-2" id="" style="display: block;"
                           value="{{offer.resume.portfolio }}" readOnly>
                </div>
                <div class="mt-5 jh_resume_skill">
                    <h4>기술스택</h4>
                    <div class="row row-cols-auto gap-3 justify-content-start my-3" style="width: 70%;">
                        {{#offer.resume.skillList}}
                            <div class="btn btn-outline-primary mx-3 disabled">{{skill}}</div>
                        {{/offer.resume.skillList}}
                    </div>
                </div>
                <div class="mt-5 w-100">
                    <h4>자기소개</h4>
                    <textarea style="max-height: 150px; overflow-y: auto;" class="w-100 opacity-80" rows="10"
                              readOnly>{{offer.resume.introduce}}
                    </textarea>
                </div>
            </div>
        </div>
    </div>
</div>

{{> layout/footer}}